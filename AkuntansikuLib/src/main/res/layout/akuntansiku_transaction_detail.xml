<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/akuntansiku_custom_toolbar"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ScrollView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:padding="@dimen/padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_marginBottom="@dimen/padding"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:fontFamily="@font/ubuntu_regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Transaksi"/>
                        <TextView
                            android:id="@+id/t_transaction_mode"
                            android:textSize="18sp"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/ubuntu_medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginBottom="@dimen/padding"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:fontFamily="@font/ubuntu_regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tanggal"/>
                        <TextView
                            android:id="@+id/t_date"
                            android:textSize="18sp"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/ubuntu_medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginBottom="@dimen/padding"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:fontFamily="@font/ubuntu_regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Kontak"/>
                        <TextView
                            android:id="@+id/t_contact_name"
                            android:textSize="18sp"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/ubuntu_medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginBottom="@dimen/padding"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:fontFamily="@font/ubuntu_regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Jatuh Tempo"/>
                        <TextView
                            android:id="@+id/t_due_date"
                            android:textSize="18sp"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/ubuntu_medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginBottom="@dimen/padding"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:fontFamily="@font/ubuntu_regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Catatan"/>
                        <TextView
                            android:id="@+id/t_note"
                            android:textSize="18sp"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/ubuntu_medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginBottom="@dimen/padding"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:fontFamily="@font/ubuntu_regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Produk"/>
                        <LinearLayout
                            android:layout_marginTop="@dimen/padding_separuh"
                            android:background="@drawable/button_primary_outline_akuntansiku"
                            android:orientation="vertical"
                            android:id="@+id/l_product"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginBottom="@dimen/padding"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:fontFamily="@font/ubuntu_regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Kurir"/>
                        <TextView
                            android:id="@+id/t_courier_name"
                            android:textSize="18sp"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/ubuntu_medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""/>
                        <TextView
                            android:id="@+id/t_receipt_number"
                            android:textSize="18sp"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/ubuntu_medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginBottom="@dimen/padding"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:fontFamily="@font/ubuntu_regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Alamat Penerima"/>
                        <TextView
                            android:id="@+id/t_recipient_address"
                            android:textSize="18sp"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/ubuntu_medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""/>
                    </LinearLayout>

                    <TextView
                        android:fontFamily="@font/ubuntu_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jurnal"/>
                    <LinearLayout
                        android:layout_marginTop="@dimen/padding_separuh"
                        android:background="@drawable/button_primary_outline_akuntansiku"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <include layout="@layout/akuntansiku_item_journal"/>
                        <LinearLayout
                            android:orientation="vertical"
                            android:id="@+id/l_journal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>
            <LinearLayout
                android:padding="@dimen/padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/b_delete"
                    android:fontFamily="@font/ubuntu_bold"
                    android:textAllCaps="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_danger_akuntansiku"
                    android:text="Hapus"
                    android:textColor="@color/colorWhite" />

                <Button
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/padding_separuh"
                    android:id="@+id/b_edit"
                    android:fontFamily="@font/ubuntu_bold"
                    android:textAllCaps="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_primary_akuntansiku"
                    android:text="Edit"
                    android:textColor="@color/colorWhite" />

            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rel_loading"
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ProgressBar
                android:layout_centerInParent="true"
                android:id="@+id/p_login"
                style="?android:attr/progressBarStyle"
                android:layout_width="30dp"
                android:layout_height="30dp" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>