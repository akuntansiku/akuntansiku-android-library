<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/t_mode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Pengeluaran"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/titleSize"
                        app:fontFamily="@font/ubuntu_medium" />

                    <TextView
                        android:id="@+id/t_created_at"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12 Juli 2020"
                        android:textColor="@color/colorBlackTwo"
                        app:fontFamily="@font/ubuntu_regular" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/padding_separuh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/t_nominal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="Rp 20.000"
                        android:textColor="@color/colorBlackTwo"
                        app:fontFamily="@font/ubuntu_regular" />
                    <TextView
                        android:id="@+id/t_note"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_weight="1"
                        android:text="Pembayaran Listrik"
                        android:textColor="@color/colorBlackTwo"
                        app:fontFamily="@font/ubuntu_regular" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="#f1f1f1" />

</LinearLayout>