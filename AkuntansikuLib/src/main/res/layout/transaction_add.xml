<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/custom_toolbar"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <LinearLayout
                android:id="@+id/linear2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_marginRight="4dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:fontFamily="@font/ubuntu_regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="Transaksi" />

                        <RelativeLayout
                            android:layout_marginBottom="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <Spinner
                                android:id="@+id/spiner_kategori"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:layout_marginRight="2dp"
                                android:background="@drawable/button_primary_outline" />

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/padding"
                                android:src="@drawable/bottom_green" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="4dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:fontFamily="@font/ubuntu_regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="Tanggal" />
                        <LinearLayout
                            android:layout_marginBottom="@dimen/padding"
                            android:id="@+id/iv_tanggal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/button_primary_outline"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="@dimen/padding_separuh">

                            <TextView
                                android:id="@+id/tanggal_tambah_transaksi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/padding_separuh"
                                android:fontFamily="@font/ubuntu_bold"
                                android:text="Pilih Tanggal"
                                android:textColor="@color/colorBlackTwo" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>



                <TextView
                    android:fontFamily="@font/ubuntu_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sejumlah" />

                <EditText
                    android:fontFamily="@font/ubuntu_regular"
                    android:layout_marginBottom="@dimen/padding"
                    android:id="@+id/et_nominal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="Rp 0"
                    android:inputType="numberDecimal"
                    android:textSize="30dp" />

                <TextView
                    android:fontFamily="@font/ubuntu_regular"
                    android:id="@+id/dari"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Debit" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Spinner
                            android:id="@+id/spinercashbox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:background="@drawable/button_primary_outline" />

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/padding"
                            android:src="@drawable/bottom_green" />
                    </RelativeLayout>

                </RelativeLayout>

                <TextView
                    android:fontFamily="@font/ubuntu_regular"
                    android:id="@+id/ke"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Kredit" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Spinner
                        android:id="@+id/spinercashbox2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:background="@drawable/button_primary_outline" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/padding"
                        android:src="@drawable/bottom_green" />

                </RelativeLayout>


                <TextView
                    android:layout_marginTop="@dimen/padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Catatan" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp">

                    <EditText
                        android:gravity="top|left"
                        android:lines="2"
                        android:inputType="textMultiLine"
                        android:fontFamily="@font/ubuntu_regular"
                        android:id="@+id/et_catatan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_primary_outline"
                        android:hint="Masukkan catatan"
                        android:scrollbars="vertical"
                        android:padding="@dimen/padding_separuh"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/l_optional_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/ubuntu_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Opsional"/>
                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/l_optional"
                    android:layout_marginTop="@dimen/padding"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:orientation="vertical">

                    <TextView
                        android:fontFamily="@font/ubuntu_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:text="Kontak" />

                    <LinearLayout
                        android:id="@+id/l_contact"
                        android:gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_primary_outline">

                        <TextView
                            android:fontFamily="@font/ubuntu_regular"
                            android:id="@+id/t_contact_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Pilih Kontak"
                            android:padding="@dimen/padding_separuh"
                            android:textColor="@color/colorAccent"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <TextView
                        android:fontFamily="@font/ubuntu_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding"
                        android:layout_marginBottom="6dp"
                        android:text="Jatuh Tempo" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/padding"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/lin_jatuh_tempo_hutang"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/button_primary_outline"
                            android:gravity="center_horizontal"
                            android:padding="@dimen/padding_separuh">

                            <TextView
                                android:fontFamily="@font/ubuntu_regular"
                                android:id="@+id/t_due_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pilih Tanggal Jatuh Tempo"
                                android:textColor="@color/colorAccent"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding"
            android:paddingRight="@dimen/padding">
            <include layout="@layout/alert_danger"/>
        </LinearLayout>


        <Button
            android:id="@+id/btn_simpan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/padding"
            android:textColor="@color/colorWhite"
            android:background="@drawable/button_primary"
            android:text="Tambah"
            android:visibility="visible"/>


    </LinearLayout>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rel_loading"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:layout_centerInParent="true"
            android:id="@+id/p_login"
            style="?android:attr/progressBarStyle"
            android:layout_width="30dp"
            android:layout_height="30dp" />
    </RelativeLayout>

</RelativeLayout>