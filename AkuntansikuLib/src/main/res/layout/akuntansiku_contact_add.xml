<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/akuntansiku_custom_toolbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ScrollView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_margin="@dimen/padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_marginTop="@dimen/padding"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:fontFamily="@font/lato"
                        android:textColor="@color/colorBlackTwo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Email"/>
                    <EditText
                        android:inputType="textEmailAddress"
                        android:id="@+id/e_email"
                        android:fontFamily="@font/lato"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="" />
                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="@dimen/padding_triple"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:fontFamily="@font/lato"
                        android:textColor="@color/colorBlackTwo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nama"/>
                    <EditText
                        android:id="@+id/e_name"
                        android:fontFamily="@font/lato"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/padding_triple"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:fontFamily="@font/lato"
                        android:textColor="@color/colorBlackTwo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Alamat"/>
                    <EditText
                        android:id="@+id/e_address"
                        android:fontFamily="@font/lato"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/padding_triple"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:fontFamily="@font/lato"
                        android:textColor="@color/colorBlackTwo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No HP"/>
                    <EditText
                        android:id="@+id/e_no_hp"
                        android:fontFamily="@font/lato"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/padding_triple"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:fontFamily="@font/lato"
                        android:textColor="@color/colorBlackTwo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Keterangan"/>
                    <EditText
                        android:id="@+id/e_note"
                        android:fontFamily="@font/lato"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>


        <RelativeLayout
            android:layout_margin="@dimen/padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:elevation="0dp"
                    android:id="@+id/b_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TAMBAH"
                    app:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/button_primary_akuntansiku"/>
            </LinearLayout>

            <ProgressBar
                android:visibility="gone"
                android:indeterminateTint="@color/colorWhite"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/padding_separuh"
                android:id="@+id/p_add"
                style="?android:attr/progressBarStyle"
                android:layout_width="30dp"
                android:layout_height="30dp" />
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>