<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/akuntansiku_custom_toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="@dimen/padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:visibility="gone"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:clipToPadding="true"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/i_photo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:background="@color/colorPrimary"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/t_edit_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_triple"
                    android:fontFamily="@font/lato_bold"
                    android:text="EDIT PHOTO"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/l_name"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginBottom="@dimen/padding_separuh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ubuntu_medium"
                        android:text="Name"
                        android:textColor="@color/colorBlackTwo"
                        android:textSize="12sp"
                        app:fontFamily="@font/ubuntu_regular" />

                    <TextView
                        android:id="@+id/t_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ubuntu_regular"
                        android:text=""
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp"
                        app:fontFamily="@font/ubuntu_bold" />
                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:layout_marginBottom="@dimen/padding"
                android:layout_marginTop="@dimen/padding"
                android:layout_width="match_parent"
                android:background="@color/colorGrey"
                android:layout_height="2dp"/>

            <LinearLayout
                android:id="@+id/l_email"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/padding_separuh"
                        android:fontFamily="@font/ubuntu_medium"
                        android:text="Email"
                        android:textColor="@color/colorBlackTwo"
                        android:textSize="12sp"
                        app:fontFamily="@font/ubuntu_regular" />

                    <TextView
                        android:id="@+id/t_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ubuntu_regular"
                        android:text=""
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp"
                        app:fontFamily="@font/ubuntu_bold" />
                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:layout_marginBottom="@dimen/padding"
                android:layout_marginTop="@dimen/padding"
                android:layout_width="match_parent"
                android:background="@color/colorGrey"
                android:layout_height="2dp"/>

            <LinearLayout
                android:id="@+id/l_no_phone"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginBottom="@dimen/padding_separuh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ubuntu_medium"
                        android:text="No Handphone"
                        android:textColor="@color/colorBlackTwo"
                        android:textSize="12sp"
                        app:fontFamily="@font/ubuntu_regular" />

                    <TextView
                        android:id="@+id/t_no_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ubuntu_regular"
                        android:text=""
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp"
                        app:fontFamily="@font/ubuntu_bold" />
                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:layout_marginBottom="@dimen/padding"
                android:layout_marginTop="@dimen/padding"
                android:layout_width="match_parent"
                android:background="@color/colorGrey"
                android:layout_height="2dp"/>

            <Button
                android:visibility="gone"
                android:id="@+id/button_save"
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SAVE"
                app:fontFamily="@font/montserrat_bold"
                android:textColor="@color/colorWhite"
                android:background="@drawable/button_primary_akuntansiku"/>
        </LinearLayout>
    </ScrollView>




</LinearLayout>